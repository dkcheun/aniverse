package footer 

templ Footer() {
	<footer class="w-full bg-black text-gray-300">
  <section id="about" class="py-12 mt-20">
    <div class="container mx-auto">
      <div class="footer-top flex flex-col items-center">
        <a href="/" class="text-white text-xl font-semibold">Aniverse</a>
      </div>
      @Group()
    </div>
    <!-- A-Z list Section w/ Alphabetical Navigation -->
    @AZList()
    <!-- Links Section -->
    @Links()
